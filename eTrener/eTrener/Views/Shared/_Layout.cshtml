@using System.Web.Optimization
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>eTrener</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet"/>
    <link href="~/Content/ionicons/css/ionicons.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/dist/css/admin-lte.css" rel="stylesheet"/>
    <link href="~/Content/dist/css/skins/skin-black.css" rel="stylesheet"/>


</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
<header class="main-header">

    <nav class="navbar navbar-static-top" role="navigation">
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">

                @Html.Partial("_LoginPartial")

            </ul>
        </div>
    </nav>
</header>
<aside class="main-sidebar">
    <section class="sidebar">
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Images/account.jpeg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@User.Identity.GetUserName()</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>

        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li id="left-sidebar-menu-dashboard" class="treeview">
                <a href="@Url.Action("Dashboard", "Account")">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span> <i class="fa fa-angle-left pull-right"></i>
                </a>

            </li>

            <li id="left-sidebar-menu-charts" class="treeview">
                <a href="#">
                    <i class="fa fa-calculator"></i>
                    <span>Calculators</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li id="left-sidebar-menu-charts-BMI">
                        <a href="@Url.Action("BMI", "Calculators")"><i class="fa fa-heartbeat"></i> BMI Calculator</a>
                    </li>
                    <li id="left-sidebar-menu-charts-WHR">
                        <a href="@Url.Action("WHR", "Calculators")"><i class="fa fa-heartbeat"></i> WHR Calculator</a>
                    </li>
                    <li id="left-sidebar-menu-charts-SBW">
                        <a href="@Url.Action("SBW", "Calculators")"><i class="fa fa-heartbeat"></i> Should Body Weight</a>
                    </li>
                    <li id="left-sidebar-menu-charts-BM">
                        <a href="@Url.Action("BM", "Calculators")"><i class="fa fa-heartbeat"></i> Basic Metabolism</a>
                    </li>
                    <li id="left-sidebar-menu-charts-PBF">
                        <a href="@Url.Action("PBF", "Calculators")"><i class="fa fa-heartbeat"></i> Percentage Body Fat</a>
                    </li>
                </ul>
            </li>
            <li id="left-sidebar-menu-elements" class="treeview">
                <a href="#">
                    <i class="fa fa-cutlery"></i>
                    <span>Diet</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li id="left-sidebar-menu-elements-general">
                        <a href="@Url.Action("ProductList", "Diet")"><i class="fa fa-circle-o"></i> List of products</a>
                    </li>
                    @if (@User.IsInRole("Admin"))
                    {
                        <li id="left-sidebar-menu-elements-icons">
                            <a href="@Url.Action("AddProduct", "Diet")"><i class="fa fa-circle-o"></i> Add a product</a>
                        </li>
                    }
                    <li id="left-sidebar-menu-elements-buttons">
                        <a href="@Url.Action("CreateDiet", "Diet")"><i class="fa fa-circle-o"></i> Create Diet</a>
                    </li>


                </ul>

            </li>
            <li id="left-sidebar-menu-elements3" class="treeview">
                <a href="#">
                    <i class="fa fa-cutlery"></i>
                    <span>Excercises</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li id="left-sidebar-menu-elements-general2">
                        <a href="@Url.Action("ExcerciseList", "Training")"><i class="fa fa-circle-o"></i> List of training</a>
                    </li>
                    @if (@User.IsInRole("Admin"))
                    {
                        <li id="left-sidebar-menu-elements-icons2">
                            <a href="@Url.Action("AddTraining", "Training")"><i class="fa fa-circle-o"></i> Add an excercise</a>
                        </li>
                    }
            

                </ul>

            </li>

            <li id="left-sidebar-menu-elements4" class="treeview">
                <a href="#">
                    <i class="fa fa-book"></i>
                    <span>Training log</span>
                    <i class="fa fa-angle-left pull-right"></i>

                </a>
                <ul class="treeview-menu">
                    <li id="left-sidebar-menu-elements-general4">
                        <a href="@Url.Action("AddExcercise", "Log")"><i class="fa fa-pencil-square-o"></i> Add excercise to log</a>
                    </li>

                    <li id="left-sidebar-menu-elements-icons3">
                        <a href="@Url.Action("ShowLog", "Log")"><i class="fa fa-pencil-square-o"></i> Show your excercise log</a>
                    </li>


                </ul>

            </li>
            <li id="left-sidebar-menu-elements5" class="treeview">
                <a href="#">
                    <i class="fa fa-balance-scale"></i>
                    <span>Measurements log</span>
                    <i class="fa fa-angle-left pull-right"></i>
                </a>
                <ul class="treeview-menu">
                    <li id="left-sidebar-menu-elements-general5">
                        <a href="@Url.Action("AddMeasurements", "Measurements")"><i class="	fa fa-arrows-h"></i> Add measurements</a>
                    </li>

                    <li id="left-sidebar-menu-elements-icons5">
                        <a href="@Url.Action("ShowMeasurements", "Measurements")"><i class="	fa fa-arrows-h"></i> Show your measurements</a>
                    </li>


                </ul>

            </li>
        </ul>
    </section>
</aside>
<div class="content-wrapper">
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small>@ViewBag.SubTitle</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <i class="fa fa-dashboard"></i>@ViewBag.SubTitle</a>
            </li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>
    <section class="content">
        @RenderBody()
    </section>
</div>
<footer class="main-footer">
    <div class="pull-right hidden-xs">
        <b>Version</b> 0.8.1
    </div>
    <strong>Copyrights | eTrener | 2017 <a href="http://mateusz-szopa.pl">Mateusz Szopa</a>.</strong> All rights
    reserved.
</footer>
</div>


<script src="~/Scripts/jQuery-2.1.4.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery.slimscroll.js"></script>
<script src="~/Scripts/fastclick.js"></script>
<script src="~/Scripts/_Layout.js"></script>
<script src="~/Content/dist/js/app.js"></script>


@RenderSection("menu", required: false)

@RenderSection("scripts", required: false)
</body>
</html>