@model eTrener.Models.BMViewModel
@{
    ViewBag.Title = "BM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Letter.css" rel="stylesheet" />
<div class="paper">
    <p >
        <b> Basic Metabolic Rate </b>is the amount of energy that must be provided to the body to ensure proper functioning
        of the internal organs in complete peace both physically and mentally, in fasting and in optimum climates.
        This energy is consumed, among other things, by breathing, heart rate, restoration and cell growth. PPM may
        account for 50-70% of total metabolic rate (daily human energy expenditure). PPM is measured in kilocalories (kcal).
        The average PPM value of a healthy person is about 1 kcal / kg bodyweight per hour. The value of Primary Matter is dependent,
        among others, on:
        <ul>
            <li>Sex</li>
            <li>Age</li>
            <li>
                Weight and height
            </li>
            <li>
                Physiological state
            </li>
            <li>
                Health and nutrition
            </li>
            <li>
                Activity of some hormones
            </li>
            <li>
                genetic factors
            </li>
        </ul>

    </p>

    <div class="letter">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">

                    @using (Html.BeginForm("BM", "Calculators", FormMethod.Post, new {role = "form"}))
                    {
                        <div class="box-body">
                            <div class="form-group">
                                @Html.Label("Weight [kg]", new {@class = "col-md-6 control-label"})
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Weight, new {@class = "form-control"})
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Height [cm]", new {@class = "col-md-6 control-label"})
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Height, new {@class = "form-control"})
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Age", new {@class = "col-md-6 control-label"})
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Age, new {@class = "form-control"})
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Sex, new {@class = "col-md-4 control-label"})
                                <div class="col-md-10">
                                    @Html.DropDownListFor(m => m.Sex,
                                        new List<SelectListItem>
                                        {
                                            new SelectListItem {Value = "Male", Text = "Male"},
                                            new SelectListItem {Value = "Female", Text = "Female"}
                                        },
                                        new
                                        {
                                            size = "1",
                                            style = "width: 140px"
                                        })
                                    @ViewBag.whr <br/>
                                    @ViewBag.result
                                </div>
                           
                            </div>
                
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                 
                                    <input type="submit" value="Calculate" class="btn btn-default"/>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>