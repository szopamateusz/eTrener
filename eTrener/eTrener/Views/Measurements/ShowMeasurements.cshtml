@*@model IEnumerable<eTrener.Models.BodyMeasurements>*@
@model PagedList.IPagedList<eTrener.Models.BodyMeasurements>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Your measurements";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/table.css" rel="stylesheet" />

<table>
    <thead>
    <tr>
        <th>Date</th>
        <th>Weight</th>
        <th>Biceps</th>
        <th>Calf</th>
        <th>Chest</th>
        <th>Forearm</th>
        <th>Hip</th>
        <th>Neck</th>
        <th>Thigh</th>
        <th>Waist</th>
        <th>Wrist</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var position in Model)
    {
        <tr>      
            <td>@position.TrainingTime</td>
            <td>@position.Weight</td>
            <td>@position.Biceps</td>
            <td>@position.Calf</td>
            <td>@position.Chest</td>
            <td>@position.Forearm</td>
            <td>@position.Hip</td>
            <td>@position.Neck</td>
            <td>@position.Thigh</td>
            <td>@position.Waist</td>
            <td>@position.Wrist</td>
            <td><a class="ion-android-delete"></a>@Html.ActionLink("Delete", "DeleteMeasurement", "Measurements", new { id = @position.BodyMeasurementdId }, null)</td>

        </tr>
    }
    
    </tbody>
</table>
<div class="box-body">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("ShowMeasurements", 
        new { page}))
</div>