@model eTrener.Models.Excercise

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

</head>

<body>

<style>
    .modal-header {
        padding: 2px 16px;
        background-color: #5cb85c;
        color: white;
    }

    .modal-footer {
        padding: 2px 16px;
        background-color: #5cb85c;
        color: white;
    }

</style>
<div>

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <center>
            <h3 class="modal-title" id="myModalLabel">Information about @Model.Name</h3>
        </center>
    </div>


    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BodyPart)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BodyPart)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.About)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.About)


        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.YtUrl)
        </dt>

        <dd>
            <div style="position: relative; height: 0; padding-bottom: 56.25%">
                <iframe src="@Model.YtUrl" width="640" height="400" 
                        frameborder="0" style="position: absolute; width: 100%; height: 100%; left: 0" 
                        allowfullscreen>
                </iframe>
            </div>
            
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImgUrl)
        </dt>
        <dd>
            <img src="@Model.ImgUrl" />

        </dd>
    </dl>
</div>
<div class="modal-footer"></div>
</body>
</html>